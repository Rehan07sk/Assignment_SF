
CREATE DATABASE IF NOT EXISTS METADATA_DB;
USE DATABASE METADATA_DB;
CREATE SCHEMA METADATA_SCHEMA;

CREATE TABLE METADATA_SCHEMA.CUSTOMER_RETENTION_METADATA (
    CUSTOMER_NAME VARCHAR(100),
    RETENTION_DAYS INT
);

INSERT INTO METADATA_SCHEMA.CUSTOMER_RETENTION_METADATA VALUES
